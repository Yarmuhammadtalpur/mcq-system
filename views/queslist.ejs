<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header') %>

  <body>
    <%- include('partials/navbar') %>

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col" colspan="2">Question</th>
          <th scope="col">Option 1</th>
          <th scope="col">Option 2</th>
          <th scope="col">Option 3</th>
          <th scope="col" class="correctOption">Correct Option</th>
          <th scope="col">Remove Question</th>
        </tr>
      </thead>
      <tbody>
          <% for(var i=0; i<questions.length; i++) { %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td colspan="2">Q: <%= questions[i].Question %></td>
          <td><%= questions[i].Option1 %></td>
          <td><%= questions[i].Option2 %></td>
          <td><%= questions[i].Option3 %></td>
          <td class="correctans" ><%= questions[i].CorrectOption %></td>
          
          <td class="align-middle">
            <form method="POST" >
            <button type="submit" class="btn btn-danger btn-rounded btn-sm my-0" name="Id_no" value="<%= questions[i]._id %>">
            Remove
            </button>
          </form>
        </td>
        </tr>

        <% } %>
      </tbody>
    </table>

    <%- include('partials/footer') %>
  </body>
</html>
